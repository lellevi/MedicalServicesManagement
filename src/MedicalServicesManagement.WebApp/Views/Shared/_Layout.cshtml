@using System.Security.Claims
@{
    var role = User?.Claims?.FirstOrDefault(claim => claim.Type == ClaimTypes.Role)?.Value;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Айболит</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                @* <a class="navbar-brand" href="@Url.Action("Index", "Shows")">Shows</a>
                <a class="navbar-brand" href="@Url.Action("Index", "Tickets")">Tickets</a>
                @if (role == Constants.AdminRole)
                {
                    <a class="navbar-brand" href="@Url.Action("Index", "Users")">Users</a>
                }*@

                <div class="collapse navbar-collapse justify-content-end">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <span class="nav-link">Hello, @User.Identity.Name!</span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Auth" asp-action="Logout" class="form-inline">
                                    <button type="submit" class="btn btn-link nav-link" style="cursor:pointer;">Logout</button>
                                </form>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Auth")">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Register", "Auth")">Register</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>